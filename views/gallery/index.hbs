<h1>Gallery</h1>

{{#each galleryIndex}}

<div class="galleryIndex">

	<img src=" {{ link }}" height="400" width="auto" />
	
	<p>Author: {{ author}}</p>

	<p>Description: {{ description }} </p>

</div>

<form action="http://localhost:3000/gallery/{{id}}" method="GET" enctype="application/x-www-form-urlencoded">
	
	<button type="submit">View Image</button>

</form>

{{/each}}