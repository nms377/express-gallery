{{> header }}

{{!-- {{> user }} --}}

	<form action="http://localhost:3000/gallery" method="GET" enctype="application/x-www-form-urlencoded">
		
		<button type="submit">Return to Gallery</button>

	</form>

{{#with viewImg}}

<div class="viewImg">
	
	<p>{{ author }}</p>

	<p> {{ link }} </p>
	
	<img src="{{ link }}" height="400" width="auto" />

	<p>{{ description }} </p>

	<form action="http://localhost:3000/gallery/{{id}}/edit" method="get" enctype="application/x-www-form-urlencoded">
		
		<button type="submit">Edit</button>

	</form>

	<form action="http://localhost:3000/gallery/{{id}}?_method=DELETE" method="post" enctype="application/x-www-form-urlencoded">
		
		<button type="submit">Delete</button>

	</form>

</div>

{{/with}}

{{#each images }}

	<div class="images">
		
		<a href="/gallery/{{id}}">
			<img src="{{ link }}" alt="{{ description }}" height="400" width="auto">
		</a>

	</div>

{{/each}}