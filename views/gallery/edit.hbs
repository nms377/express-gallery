{{> header }}

{{#if galleryEdit}}

<div class="galleryEdit">

	<img src="{{ galleryEdit.link }}" height="400" width="auto" />
	
	<p>Author: {{ galleryEdit.author}}</p>

	<p>Description: {{ galleryEdit.description }} </p>

</div>

{{/if}}

<form action="http://localhost:3000/gallery/{{ galleryEdit.id }}/?_method=PUT" method="post" enctype="application/x-www-form-urlencoded">
	<label name="link">Link</label>
		<input name="link" type="text" value={{ galleryEdit.link }}><br>

	<label name="author">Author</label>
		<input name="author" type="text" value="{{ galleryEdit.author }}"><br>

	<label name="description">Description</label>
		<input name="description" type="text" value="{{ galleryEdit.description }}"><br>

	<button type="submit">Edit</button>

</form>

<form action="http://localhost:3000/gallery/{{ galleryEdit.id }}" method="get" enctype="application/x-www-form-urlencoded">
	
	<button type="submit">Cancel</button>

</form>